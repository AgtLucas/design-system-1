{
  "name": "@nulogy/nucleus",
  "workspaces": [
    "components",
    "css",
    "docs",
    "sandbox",
    "tokens"
  ],
  "version": "0.1.0",
  "description": "Modern Enterprise Design for the Industrial Environment - http://nulogy.design",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "author": "Nulogy <info@nulogy.com> (https://github.com/nulogy)",
  "contributors": [
    "Ned Schwartz <neds@nulogy.com> (http://guthub.com/theinterned)"
  ],
  "homepage": "http://nulogy.design",
  "repository": "https://github.com/nulogy/nucleus",
  "bugs": {
    "url": "https://github.com/nulogy/nucleus/issues"
  },
  "keywords": [
    "nulogy",
    "nucleus",
    "NDS",
    "design system"
  ],
  "engines": {
    "node": "^8.11.3",
    "yarn": "^1.7.0"
  },
  "scripts": {
    "start": "yarn components start",
    "document": "yarn docs start",
    "hack": "yarn sandbox hack",
    "all": "concurrently `yarn start' 'yarn document' 'yarn hack' 'yarn css start'",

    "test": "lerna run test --stream --since master",
    "pretest": "yarn build:public --since master",
    
    "build": "lerna run build --stream",
    "build:public": "yarn build --no-private",
    
    "clean": "lerna exec 'rm -rf dist'",
    "clean:all": "git clean -fdX .",
    
    "components": "yarn workspace @nulogy/components",
    "css": "yarn workspace @nulogy/css",
    "docs": "yarn workspace @nulogy/nulogy-design",
    "sandbox": "yarn workspace @nulogy/sandbox",
    "tokens": "yarn workspace @nulogy/tokens"
  },
  "devDependencies": {
    "concurrently": "^3.6.1",
    "lerna": "^3.2.1"
  }
}
